@{
    Layout = null;
}

<h1>Добавление новой учетной записи</h1>

<form name="UserForm">

<div class="row admin-row">
    <div class="col-md-3">
        <div class="sys-text"><span class="mandatory-field">*</span>Логин</div>
    </div>
    <div class="col-md-9">
        <input type="text" class="form-control" ng-model="User.Name" placeholder="SuperAdmin" required/>
    </div>
</div>

<div class="row admin-row">
    <div class="col-md-3">
        <div class="sys-text"><span class="mandatory-field">*</span>Пароль</div>
    </div>
    <div class="col-md-9">
        <input type="password" class="form-control" ng-model="User.Pass" placeholder="******" required/>
    </div>
</div>

<div class="row admin-row">
    <div class="col-md-3">
        <div class="sys-text"><span class="mandatory-field">*</span>Повторите пароль</div>
    </div>
    <div class="col-md-9">
        <input type="password" class="form-control" ng-model="User.RepeatPass" placeholder="******" required/>
    </div>
</div>

</form>

<div class="error-ctn">
    {{Error}}
</div>

<div class="help-ctn">
    Поля отмеченные символом - <span class="mandatory-field">*</span> 
    <br/>
    oбязательны для заполнения
</div>

<div class="row admin-btn-row">
    <div class="col-sm-6 admin-row">
        <button class="btn btn-default" ng-click="SaveChanges()">Добавить учетную запись</button>
    </div>
    <div class="col-sm-6 admin-row">
        <button class="btn btn-default" ng-click="Back()">Вернуться назад</button>
    </div>
</div>

