
<table class="table">
    <tr>
        <th>
            Изображение раздела
        </th>
        <td>
            <img ng-src="{{MenuType.PhotoLink}}"/>
            <br/>
            <input type="file" onchange="angular.element(this).scope().AddFile(this.files)" />
        </td>
    </tr>
    <tr>
        <th>
            Название
        </th>
        <td>
            <input class="form-control" ng-model="MenuType.Name"/>
        </td>
    </tr>
    <tr>
        <th>
            Описание раздела
        </th>
        <td>
            <textarea class="form-control" rows="10" ng-model="MenuType.Description"></textarea>
        </td>
    </tr>
</table>

<table>
    <tr>
        <td>
            <button class="btn btn-default" ng-click="SaveChanges()">Сохранить</button>
        </td>
        <td>
            <button class="btn btn-default" onclick="document.location = '#/'">Назад</button>
        </td>
        <td>
            <button class="btn btn-default" ng-click="DeleteMenuType()">Удалить</button>
        </td>
    </tr>
</table>

