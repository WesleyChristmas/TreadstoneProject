    .infoPaneContainer {
        background: rgba(60,60,60,0.7);
    }
    .infoPane {
        margin: 0 8px;
        padding: 8px 0;
    }
    .cellTitle {
        height: 64px;
        overflow: hidden;
        text-align: left;
        font-family: OpenSans !important;
        float: none;
        font-size: 12px;
        line-height: 16px;
        width: 108px;
        word-wrap: break-word;
        white-space: normal;
        color: #F5F5F5;
        font-weight: normal;
        vertical-align: baseline;
        margin: 0;
        padding: 0;
    }
    .type, .pforms {
        font-size: 12px;
        line-height: 16px;
        height: 16px;
        opacity: 0.5;
        white-space: nowrap;
        color: #F5F5F5;
        font-weight: normal;
        vertical-align: baseline;
        margin: 0;
        padding: 0;
    }

