        overflow: hidden;
    }
    .thumbPane img {
        width: 124px;
        height: 124px;
    }

    .rgba .cellGrid .thumbPane, .rgba .cellGridGameStandard .thumbPane, .rgba .cellGridVideoStandard .thumbPane, .rgba .familyCellGridStandard .thumbPane {
        background: rgba(60,60,60,0.7);
