@using PartyCafe.Site.Models
@model LoginViewModel
@{
    ViewBag.Title = "Авторизация";
}

<link href="~/Content/css/login-style.css" rel="stylesheet" />

<div class="about-wrap">
    <div class="h1">
        <div class="darkArea">
            <div class="loginform form-control">
                <div class="row">
                    <div class="lf-wrap">
                        <section id="loginForm">
                            <h4>Для доступа к закрытой части сайта зайдите под своей учетной записью</h4>
                            <hr />
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal auth-form", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label auth-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control auth-tb" })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label auth-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control auth-tb" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Войти" class="btn btn-default auth-btn" />
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
